{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "auto": true
        },
        {
            "label": "Elastic: Import",
            "type": "shell",
            "command": "node",
            "args": [
                "bg/process.js",
                "import"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "group": "elastic"
            },
            "problemMatcher": [
                "$jshint"
            ]
        }
    ]
}